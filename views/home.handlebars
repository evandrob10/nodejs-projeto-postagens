<section style="display: flex; flex-direction:column; align-items:center; min-height:89vh;">
    <h1>POSTAGENS</h1>
    <section style="display: flex; flex-flow: row wrap;">
        {{#each posts}}
            <article style="width: 300px; height: 400px; border:1px solid; padding: 10px; display:flex; flex-direction:column;margin:10px; justify-content:space-between;">
                <h1 style="text-align:center; font-size: 16pt;">{{titulo}}</h1>
                <p style="font-size: 14pt; height:200px; overflow: hidden;">{{conteudo}}</p>
                <p style="font-size: 12pt; opacity: .7;">{{updatedAt}}</p>
            </article>
        {{/each}}
    </section>
</section>



